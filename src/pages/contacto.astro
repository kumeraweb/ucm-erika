---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import { SITE, LINKS } from '../data/site'

const meta = {
  title: 'Contacto | Ejecutiva Autorizada UCM',
  description:
    'Comunícate directamente con tu ejecutiva autorizada UCM para recibir información, orientación y cotización de los planes.',
  image: SITE.ogImage
}
---

<BaseLayout {...meta}>
  <Header />

  <main class="max-w-3xl mx-auto px-6 py-14 space-y-10">
    <h1 class="text-3xl font-bold text-[#1A2A42]">Contacto Directo</h1>

    <p class="text-lg text-gray-700">
      Comunícate con tu ejecutiva autorizada UCM para resolver dudas, solicitar cotizaciones o
      iniciar tu proceso de afiliación.
    </p>

    <div class="space-y-6 text-gray-700">
      <p><strong>Ejecutiva:</strong> {SITE.name}</p>

      <p>
        <strong>WhatsApp:</strong>
        <a href={LINKS.wa()} data-cta="whatsapp" class="text-emerald-600 font-semibold underline">
          +56 {SITE.phone}
        </a>
      </p>

      <p>
        <strong>Teléfono:</strong>
        <a href={LINKS.call()} data-cta="llamar" class="text-blue-700 font-semibold underline">
          Llamar ahora
        </a>
      </p>

      <p>
        <strong>Email:</strong>
        <a href={`mailto:${SITE.email}`} class="text-slate-700 underline">
          {SITE.email}
        </a>
      </p>

      <p><strong>Cobertura:</strong> {SITE.city}</p>
    </div>

    <div class="mt-10 flex gap-4">
      <a
        href={LINKS.wa()}
        class="bg-emerald-600 text-white px-6 py-3 rounded-lg font-semibold"
        data-cta="whatsapp"
      >
        Enviar WhatsApp
      </a>

      <a
        href={LINKS.call()}
        class="bg-gray-800 text-white px-6 py-3 rounded-lg font-semibold"
        data-cta="llamar"
      >
        Llamar ahora
      </a>
    </div>
  </main>
</BaseLayout>
