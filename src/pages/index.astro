---
import '../styles/global.css'
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import PromoBanner from '../components/PromoBanner.astro'
import Hero from '../components/Hero.astro'
import Services from '../components/Services.astro'
import Coverage from '../components/Coverage.astro'
import Contact from '../components/Contact.astro'
import PromoModal from '../components/PromoModal.astro'

import { SITE } from '../data/site'
const wa = `https://wa.me/56${SITE.phone}?text=Hola%20${encodeURIComponent(SITE.name)}%2C%20quiero%20cotizar%20UCM`
const call = `tel:+569${SITE.phone}`
---

<BaseLayout>
  <Header />
  <PromoBanner />
  <main>
    <Hero bgImage="/ambulancias.jpg" preloadBg={true} />

    <!-- Placeholder para secciones futuras -->
    <section id="servicios" class="py-16 bg-white">
      <Services />
    </section>
    <PromoBanner />

    <Coverage />

    <Contact formspree="https://formspree.io/f/XXXXXXXX" />
  </main>
  <PromoModal image="/promos/prom.jpg" delay={10} oncePerSession={true} />
</BaseLayout>
