---
interface Props {
  class?: string // tailwind classes (color, size, margins)
  size?: number // px
}
const { class: cls = 'text-rose-500', size = 22 } = Astro.props
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2.5"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={cls}
