---
import { SITE } from '../data/site'
const wa = `https://wa.me/56${SITE.phone}?text=Hola%20${encodeURIComponent(
  SITE.name
)}%2C%20quisiera%20hablar%20con%20usted%20sobre%20UCM`
const mensajes = [
  'Atención médica 24/7 en todo Chile 🇨🇱',
  'Asesoría personalizada sin costo 💬',
  'Ejecutivas disponibles todos los días 🕐'
]
---

<div class="bg-[#204D8D] text-white text-center py-2 overflow-hidden">
  <div class="animate-slide flex gap-10 text-sm md:text-base whitespace-nowrap">
    {
      mensajes.map((msg) => (
        <a href={wa} data-cta="banner_rotativo" class="hover:text-rose-200 transition">
          {msg}
        </a>
      ))
    }
  </div>
</div>

<style is:global>
  @keyframes slide {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  .animate-slide {
    animation: slide 25s linear infinite;
  }
</style>
