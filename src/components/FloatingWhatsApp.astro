---
import { LINKS, SITE } from '../data/site'
---

<style>
  .float-wa {
    position: fixed;
    bottom: 18px;
    right: 18px;
    z-index: 9999;

    background: #25d366;
    color: white;

    padding: 0.85rem 1.2rem;
    border-radius: 9999px;
    font-size: 0.95rem;
    font-weight: 600;

    display: flex;
    align-items: center;
    gap: 0.45rem;

    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    transition:
      transform 0.2s ease,
      background 0.2s ease;
  }

  .float-wa:hover {
    transform: scale(1.05);
    background: #1ebe5a;
  }

  /* Animación suave recomendada */
  @keyframes softPulse {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.03);
    }
    100% {
      transform: scale(1);
    }
  }

  .animate-softpulse {
    animation: softPulse 3.5s ease-in-out infinite;
  }

  /* Modo móvil */
  @media (max-width: 640px) {
    .float-wa {
      padding: 0.75rem 1rem;
      font-size: 0.85rem;
      bottom: 16px;
      right: 16px;
    }
  }
</style>

<a
  href={LINKS.wa()}
  data-cta="whatsapp"
  aria-label={`Hablar con la ejecutiva ${SITE.name} por WhatsApp`}
  class="float-wa animate-softpulse"
>
  <!-- Ícono en SVG embed para no depender de imágenes -->
