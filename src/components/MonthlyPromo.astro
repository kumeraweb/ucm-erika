---
import { SITE } from '../data/site'

interface Props {
  image: string // ruta del banner mensual
  alt?: string
}

const { image, alt = 'Promoci√≥n del mes UCM' } = Astro.props

const wa = `https://wa.me/${SITE.cleanPhone}?text=Hola%20${encodeURIComponent(SITE.name)}%2C%20quiero%20cotizar%20UCM`
---

<section id="promocion-mensual" class="relative w-full overflow-hidden bg-white">
  <a href={wa} target="_blank" rel="noopener noreferrer" data-cta="whatsapp_promo">
    <img
      src={image}
      alt={alt}
      class="w-full mx-auto md:w-[65%] md:p-12 h-auto object-cover cursor-pointer transition-transform duration-300 hover:scale-[1.02]"
      loading="eager"
      fetchpriority="high"
      decoding="async"
    />
  </a>
</section>
