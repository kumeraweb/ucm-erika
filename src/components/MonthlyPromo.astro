---
import { SITE } from '../data/site'
import { LINKS } from '../data/site'

interface Props {
  image: string
  alt?: string
}

const { image, alt = 'Promoción del mes UCM' } = Astro.props

// Reemplazo de cleanPhone → helper oficial
const wa = LINKS.wa()
---

<section id="planes" class="relative w-full overflow-hidden bg-white">
  <a href={wa} target="_blank" rel="noopener noreferrer" data-cta="whatsapp">
    <img
      src={image}
      alt={alt}
      class="w-full mx-auto md:w-[65%] md:p-12 h-auto object-cover cursor-pointer transition-transform duration-300 hover:scale-[1.02]"
      loading="eager"
      fetchpriority="high"
      decoding="async"
    />
  </a>
</section>
