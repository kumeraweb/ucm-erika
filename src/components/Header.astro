---
import { SITE } from '../data/site'

// URLs de contacto
const wa = `https://wa.me/${SITE.cleanPhone}?text=Hola%20${encodeURIComponent(SITE.name)}%2C%20quiero%20cotizar%20UCM&utm_source=site&utm_medium=header&utm_campaign=cta_whatsapp`
const tel = `tel:+56${SITE.cleanPhone}`
---

<a
  href="#contenido"
  class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-white text-slate-900 px-3 py-2 rounded-md shadow"
>
  Saltar al contenido
</a>

<header class="sticky top-0 z-50 bg-white/90 border-b border-slate-200 backdrop-blur-md">
  <div class="max-w-6xl mx-auto flex items-center justify-between px-4 py-3">
    <!-- LOGO / NOMBRE -->
    <div class="flex items-center gap-3">
      <a href="/" aria-label="Inicio - Rescate Médico UCM">
        <img
          src="/logos/logo-ucm.png"
          alt="Rescate Médico UCM – Ambulancias y atención 24/7"
          class="h-12 md:h-16 w-auto"
          width="160"
          height="64"
          loading="eager"
          decoding="async"
        />
      </a>
    </div>

    <!-- NAVEGACIÓN -->
    <nav
      class="hidden md:flex items-center gap-6 text-sm font-medium text-slate-600"
      aria-label="Navegación principal"
    >
      <a href="#servicios" class="hover:text-slate-900">Servicios de rescate</a>
      <a href="#cobertura" class="hover:text-slate-900">Cobertura Santiago y V Región</a>
      <a href="#contacto" class="hover:text-slate-900">Contacto</a>
      <a
        href={tel}
        class="text-slate-900 hover:underline whitespace-nowrap"
        data-cta="llamar_header"
      >
        Llamar: {SITE.phone}
      </a>
    </nav>

    <!-- CTA PRINCIPAL -->
    <a
      href={wa}
      data-cta="whatsapp_header"
      class="rounded-xl px-3 py-2 md:px-5 md:py-2 bg-rose-500 text-white font-semibold text-sm shadow hover:bg-emerald-700 focus:outline-none"
    >
      Contratar
    </a>
  </div>
</header>

<!-- Ancla de contenido principal para el skip link -->
<div id="contenido" class="sr-only" aria-hidden="true"></div>
