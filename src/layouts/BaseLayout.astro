---
import { SITE } from '../data/site'
import '../styles/global.css'
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro'

const canonical = SITE.domain.replace(/\/+$/, '')
const title = SITE.title || `Contrata tu Plan UCM | Ejecutiva Oficial`
const description =
  SITE.description ||
  `Afíliate a UCM con ejecutiva oficial. Atención médica a domicilio 24/7 en ${SITE.city}. Cotiza hoy por WhatsApp o llamada directa.`

const image = SITE.ogImage || '/images/og-default.jpg'
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- TITLE + DESCRIPTION -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- SEO Keywords -->
    <meta
      name="keywords"
      content={`unidad coronaria móvil, planes UCM, atención médica a domicilio, rescate médico, atención 24/7, ejecutiva UCM, WhatsApp UCM, contratar plan UCM, contacto unidad coronaria móvil`}
    />

    <!-- Robots -->
    <meta name="robots" content="index,follow,max-image-preview:large" />

    <!-- Canonical -->
    <link rel="canonical" href={canonical} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={canonical + image} />
    <meta property="og:locale" content="es_CL" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={canonical + image} />

    <!-- Preload -->
    <link rel="preload" href={image} as="image" />

    <!-- Google Ads Tag -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17545387254"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }

      gtag('js', new Date())
      gtag('config', 'AW-17545387254')
    </script>

    <!-- Tracking CTA -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('[data-cta]')?.forEach((el) => {
          el.addEventListener('click', () => {
            const id = el.getAttribute('data-cta')

            gtag('event', 'cta_click', { id })

            if (id === 'whatsapp') {
              gtag('event', 'conversion', {
                send_to: 'AW-17545387254/uvKJCO_f_cEbEPa5pa5B',
                value: 1.0,
                currency: 'CLP'
              })
            }

            if (id === 'llamar') {
              gtag('event', 'conversion', {
                send_to: 'AW-17545387254/KJCKCPLf_cEbEPa5pa5B',
                value: 1.0,
                currency: 'CLP'
              })
            }

            if (id === 'formulario') {
              gtag('event', 'conversion', {
                send_to: 'AW-17545387254/xxxxFORMxxxx',
                value: 1.0,
                currency: 'CLP'
              })
            }
          })
        })
      })
    </script>

    <!-- SCHEMA.ORG -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "MedicalOrganization",
        "name": "Unidad Coronaria Móvil - Ejecutiva",
        "url": "{canonical}",
        "logo": "{canonical}/favicon.png",
        "image": "{canonical}{image}",
        "description": "{description}",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+569{SITE.phone}",
          "contactType": "sales",
          "availableLanguage": ["Spanish"]
        },
        "areaServed": ["Santiago", "Valparaíso"]
      }
    </script>
  </head>

  <body class="bg-white text-gray-900 antialiased">
    <slot />
    <FloatingWhatsApp />
  </body>
</html>
