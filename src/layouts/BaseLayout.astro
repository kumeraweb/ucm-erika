---
import { SITE } from '../data/site'
import '../styles/global.css'
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro'

const canonical = SITE.domain.replace(/\/+$/, '')
const title = SITE.title || `Contrata tu Plan UCM | Ejecutiva Oficial`
const description =
  SITE.description ||
  `Contrata tu plan UCM con ejecutiva autorizada. Asesoría para afiliación a planes UCM en ${SITE.city}. Cotiza hoy por WhatsApp o llamada directa.`

const image = SITE.ogImage || '/images/og-default.jpg'
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- TITLE + DESCRIPTION -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- SEO Keywords -->
    <meta
      name="keywords"
      content={`planes UCM, contratar plan UCM, ejecutiva UCM, afiliación UCM, cotizar plan UCM, planes familiares UCM
`}
    />

    <!-- Robots -->
    <meta name="robots" content="index,follow,max-image-preview:large" />

    <!-- Canonical -->
    <link rel="canonical" href={canonical} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/faviconb.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={canonical + image} />
    <meta property="og:locale" content="es_CL" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={canonical + image} />

    <!-- Preload -->
    <link rel="preload" href={image} as="image" />

    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=AW-17744543596"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'AW-17744543596')
    </script>

    <!-- Tracking CTA -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('[data-cta]')?.forEach((el) => {
          el.addEventListener('click', () => {
            const id = el.getAttribute('data-cta')

            gtag('event', 'cta_click', { id })

            if (id === 'whatsapp') {
              gtag('event', 'conversion', {
                send_to: 'AW-17744543596/C8KgCPqRgMYbEOz-oI1C',
                value: 1.0,
                currency: 'CLP'
              })
            }

            if (id === 'llamar') {
              gtag('event', 'conversion', {
                send_to: 'AW-17744543596/OuL-CP2RgMYbEOz-oI1C',
                value: 1.0,
                currency: 'CLP'
              })
            }

            if (id === 'formulario') {
              gtag('event', 'conversion', {
                send_to: 'AW-17744543596/xxxxFORMxxxx',
                value: 1.0,
                currency: 'CLP'
              })
            }
          })
        })
      })
    </script>
    <!-- SCHEMA.ORG -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "@businessType": "Consulting",
        "name": "Ejecutiva autorizada UCM",
        "url": "{canonical}",
        "logo": "{canonical}/favicon.png",
        "image": "{canonical}{image}",
        "description": "Asesoría para contratar planes UCM mediante ejecutiva autorizada.",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+569{SITE.phone}",
          "contactType": "customer support",
          "availableLanguage": ["Spanish"]
        },
        "areaServed": ["Santiago", "Valparaíso"]
      }
    </script>
  </head>

  <body class="bg-white text-gray-900 antialiased">
    <slot />
    <FloatingWhatsApp />
  </body>
</html>
